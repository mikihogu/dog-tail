<!--投稿施設詳細-->
<div class="row">
  <div class="col-12 my-3">
    <div class="place-info shadow-lg p-3">
      <div class="row my-3 border-bottom">
        <div class="col-md-3 col-sm-4">施設カテゴリー：</div>
        <div class="col-md-9 col-sm-8"><%= post.category.name %></div>
      </div>
      <div class="row my-3 border-bottom">
        <div class="col-md-3 col-sm-4">一言紹介：</div>
        <div class="col-md-9 col-sm-8"><%= post.introduction %></div>
      </div>
      <div class="row my-3 border-bottom">
        <div class="col-md-3 col-sm-4">詳細：</div>
        <div class="col-md-9 col-sm-8"><%= safe_join(post.information.split("\n"),tag(:br)) %></div>
      </div>
      <div class="row my-3 border-bottom">
        <div class="col-md-3 col-sm-4">タグ：</div>
        <div class="col-md-9 col-sm-8"><%= post.tags.pluck(:name).join(' / ') %></div>
      </div>
      <div class="row my-3 border-bottom">
        <div class="col-md-3 col-sm-4">施設住所:</div>
        <div class="col-md-9 col-sm-8"><%= post.address %></div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3 col-sm-4">投稿日：</div>
        <div class="col-md-9 col-sm-8"><%= l post.created_at, format: :time %></div>
      </div>
      <div class="row mb-3 border-bottom">
        <div class="col-md-3 col-sm-4">更新日：</div>
        <div class="col-md-9 col-sm-8"><%= l post.updated_at, format: :time %></div>
      </div>
      <div class="row my-3 border-bottom">
        <div class="col-md-3 col-sm-4">投稿者：</div>
        <div class="col-md-9 col-sm-8">
          <% if request.path.match(/\/admin(\/)?/) %>
            <%= link_to admin_member_path(post.member), class: 'link' do %>
              <%= image_tag post.member.get_image, style: 'border-radius: 50%', size: '40x40', class: 'img-fluid' %>
              <%= post.member.nickname %>
            <% end %>
          <% else %>
            <%= link_to member_path(post.member), class: 'link' do %>
              <%= image_tag post.member.get_image, style: 'border-radius: 50%', size: '40x40', class: 'img-fluid' %>
              <%= post.member.nickname %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
