<div class="container my-3">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2 class="m-3 border-bottom"><i class="fas fa-dog"></i> 施設情報登録</h2>
      <%= form_with model: @post, html: {class: 'p-5 shadow-lg', autocomplete: 'off'} do |f| %>
        <%= render "public/shared/error_messages", resource: @post %>
        
        <div class="form-group row">
          <%= f.label :name, '施設名称', class: 'col-md-3 offset-1' %>
          <%= f.text_field :name, autofocus: true, class: 'col-md-7' %>
        </div>

        <div class="form-group row">
          <%= f.label :introduction, '一言紹介', class: 'col-md-3 offset-1' %>
          <%= f.text_field :introduction, autofocus: true, class: 'col-md-7' %>
        </div>

        <div class="form-group row">
          <%= f.label :information, '施設詳細', class: 'col-md-3 offset-1' %>
          <%= f.text_area :information, autofocus: true, placeholder: '施設の情報、おすすめポイント 等', class: 'col-md-7' %>
        </div>

        <div class="form-group row">
          <%= f.label :post_image, '施設画像', class: 'col-md-3 offset-1' %>
          <div class="img-preview col-md-7">
            <%= f.file_field :post_image, accept: 'image/*', class: 'img_field' %>
            <%= image_tag @post.get_post_image, height: 200, onClick: "$('.img_field').click()", class: "img_prev" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, '施設カテゴリー', class: 'col-md-3 offset-1' %>
          <%= f.collection_select :post_id, @posts, :name, :category, prompt: '選択してください', class: 'form-control col-md-7' %>
        </div>

        <div class="form-group row">
          <%= f.label :tag, 'タグ', class: 'col-md-3 offset-1' %>
          <%= f.check_box :tag_ids, multiple: true, class: 'col-md-7' %>
        </div>

        <div class="form-group row">
          <%= f.label :prefecture, '施設所在地', class: 'col-md-3 offset-1' %>
          <%= f.select :prefecture, Post.prefectures.keys, prompt: '選択してください', class: 'col-md-7' %>
        </div>

        <div class="form-group row">
          <%= f.label :address, '施設住所', class: 'col-md-3 offset-1' %>
          <%= f.text_field :address, autofocus: true, class: 'col-md-7' %>
        </div>

        <div class="form-group row">
          <div class="col text-right">
            <%= f.submit "SHARE", class: 'btn btn-outline-info' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>