<div class="container my-3">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2 class="title m-3"><i class="fas fa-edit"></i> 施設情報編集</h2>
      <%= form_with model: @post, html: {class: 'p-5 shadow-lg', autocomplete: 'off'} do |f| %>
        <%= render "public/shared/error_messages", resource: @post %>

        <%= render 'form', f: f, post: @post, categories: @categories, tags: @tags %>

        <!--Map表示-->
        <div class="row">
          <%= render 'map_edit', post: @post %>
        </div>

        <div class="form-group row">
          <div class="col text-right mt-3">
            <%= f.submit "更新", class: 'btn btn-outline-info rounded-pill' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
