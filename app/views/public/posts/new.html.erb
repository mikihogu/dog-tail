<div class="container my-3">
  <div class="row">
    <div class="col-md-11 mx-auto">
      <h2 class="title m-3"><i class="fas fa-dog"></i> 施設情報登録</h2>
      <%= form_with model: @post, html: {class: 'p-5 shadow-lg', autocomplete: 'off'} do |f| %>
        <%= render "public/shared/error_messages", resource: @post %>
        <div class="row">
          <div class="col-md-10 mx-auto">
            <%= render 'form', f: f, post: @post, categories: @categories, tags: @tags %>
          </div>
        </div>
        
        <!--Map表示-->
        <div class="row">
          <%= render 'map_new' %>
        </div>

        <div class="form-group row">
          <div class="col text-right mt-3">
            <%= f.submit "投稿", class: 'btn btn-outline-info rounded-pill' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>