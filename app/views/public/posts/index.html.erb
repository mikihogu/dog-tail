<div class="container my-3">
  <div class="row">
    <div class="col-md-7">
      <h2 class="m-3 border-bottom"><i class="fas fa-dog"></i> 施設一覧</h2>
      <%= link_to "+", new_post_path, class: "btn btn-lg rounded-pill border shadow-sm" %>

      <%= link_to '最新順(更新日)', posts_path(latest: "true") %>
      <%= link_to '古い順(投稿日)', posts_path(old: "true") %>
      <%= link_to 'おすすめ順', posts_path(favorite: "true") %>

    </div>

    <div class="col-md-5 p-3 border shadow-sm">
      <div class="tag-search">
        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
          <%= button_tag type: "submit", class: "btn btn-light search-btn" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="wrap">
    <ul id="tab-menu">
      <li><%= link_to '全て', posts_path , class: 'active' %></li>
      <!--タブに表示されたカテゴリー名に紐づく投稿を一覧表示-->
      <% @categories.each do |category| %>
        <li><%= link_to category.name, posts_path(category: category.name), class: ('active' if category == @category) %></li>
      <% end %>
    </ul>

    <div id="tab-contents">
      <div id="tab0" class="tab">
        <!--一覧-->
        <%= render 'index', posts: @posts %>
      </div>
    </div>
  </div>

  <div>
    <%= render 'map_index', posts: @posts %>
  </div>

</div>


