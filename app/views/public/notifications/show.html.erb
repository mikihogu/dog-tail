<div class="container my-3">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="row">
        <div class="col border-bottom">
          <h2 class="m-3"><i class="fas fa-dog"></i>コメント確認</h2>
        </div>
      </div>

      <!--投稿施設詳細-->
      <div class="row">
        <div class="col-md-10 mx-auto my-3">
          <div class="place-info border p-3">
            <div class="row border-bottom mb-3">
              <div class="col-md-3"><p>名称：</p></div>
              <div class="col-md-9"><p><%= @post.name %></p></div>
            </div>
            <div class="row">
              <div class="col-md-3"><p>施設カテゴリー：</p></div>
              <div class="col-md-9"><%= @post.category.name %></div>
            </div>
            <div class="row">
              <div class="col-md-3"><p>一言紹介：</p></div>
              <div class="col-md-9"><%= @post.introduction %></div>
            </div>
            <div class="row">
              <div class="col-md-3"><p>詳細：</p></div>
              <div class="col-md-9"><%= @post.information %></div>
            </div>
            <div class="row">
              <div class="col-md-3"><p>タグ：</p></div>
              <div class="col-md-9"><%= @post.tags.pluck(:name).join(' / ') %></div>
            </div>
            <div class="row">
              <div class="col-md-3"><p>施設住所:</p></div>
              <div class="col-md-9"><%= @post.address %></div>
            </div>
            <div class="row">
              <div class="col-md-3"><p>投稿日：</p></div>
              <div class="col-md-9"><%= @post.created_at %></div>
            </div>
            <div class="row">
              <div class="col-md-3"><p>更新日：</p></div>
              <div class="col-md-9"><%= @post.updated_at %></div>
            </div>
          </div>
        </div>
      </div>
        
      <!--コメント-->
      <div class="row">
        <div class="col-md-10 mx-auto">
          <div class="card">
            <div class="card-header">
              必要あれば施設情報を更新しましょう
              <!--編集ボタン-->
              <%= link_to edit_post_path(@post), class: 'col-md-1' do %>
                <i class="fas fa-edit"></i>
              <% end %>
            </div>
            <div class="card-body">
              <div class="row align-items-center">
                <div class="col-md-3">
                  <%= image_tag @comment.member.get_image, size: '30x30' %>
                  <%= @comment.member.nickname %>
                </div>
                <div class="col-md-7"><%= @comment.comment %></div>
                <div class="col-md-2"><small><%= @comment.created_at.strftime('%Y/%m/%d') %></small></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row"></div>
    </div>
  </div>
</div>