<div class="container my-3">
  <div class="row">
    <div class="col-md-10 text-center mx-auto mb-3">
      <h2 class="headline">
        We can go anywhere "with Doggies"<br>
        Let's see doggie friendly places!!
      </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
    <h3 class=" title m-3"><i class="fas fa-dog"></i> ログイン</h3>
      <%= form_with model:@member, url: member_session_path, html: {class: 'p-5 shadow-lg'} do |f| %>
        <div class="form-group row">
          <%= f.label :nickname, 'ニックネーム', class: 'col-md-3 offset-md-1 offset-0' %>
          <%= f.text_field :nickname, autofocus: true, autocomplete: 'name', class: 'col-md-7' %>
        </div>
        <div class="form-group row">
          <%= f.label :password, 'パスワード', class: 'col-md-3 offset-md-1 offset-0' %>
          <%= f.password_field :password, autofocus: true, placeholder: '6文字以上', autocomplete: 'password', class: 'col-md-7' %>
        </div>
        <div class="form-group row mt-5">
          <div class="col text-right">
            <%= f.submit "ログイン", class: 'btn btn-outline-info rounded-pill' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>