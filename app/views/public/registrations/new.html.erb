<div class="container my-3">
  <div class="row">
    <div class="col-md-10 text-center mx-auto mb-3">
      <h2 class="border-bottom">
        <i class="fas fa-dog"></i>
        We can go anywhere "with Doggies"<br>
        Let's see doggie friendly places
        <i class="fas fa-paw"></i>
      </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2 class="mb-5 ml-5"><i class="fas fa-dog"></i> 新規会員登録</h2>
      <%= form_with model: @member, url: member_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <div class="form-group row">
          <%= f.label :name, '氏名', class: 'col-md-3 offset-1' %>
          <%= f.text_field :name, autofocus: true, placeholder: '公開されません', autocomplete: 'name', class: 'col-md-7' %>
        </div>
        <div class="form-group row">
          <%= f.label :nickname, 'ニックネーム', class: 'col-md-3 offset-1' %>
          <%= f.text_field :nickname, autofocus: true, placeholder: 'サイト上で表示されます', autocomplete: 'nickname', class: 'col-md-7' %>
        </div>
        <div class="form-group row">
          <%= f.label :password, 'パスワード', class: 'col-md-3 offset-1' %>
          <%= f.text_field :password, autofocus: true, placeholder: '6文字以上', autocomplete: 'password', class: 'col-md-7' %>
        </div>
        <div class="form-group row">
          <%= f.label :email, 'メールアドレス', class: 'col-md-3 offset-1' %>
          <%= f.text_field :email, autofocus: true, autocomplete: 'email', class: 'col-md-7' %>
        </div>
        <div class="form-group row">
          <%= f.label :image, '会員画像', class: 'col-md-3 offset-1' %>
          <%= f.file_field :image, accept: 'image/*', class: 'col-md-7' %>
        </div>
        <div class="form-group row">
          <%= f.label :dog, '好きな犬種', class: 'col-md-3 offset-1' %>
          <%= f.text_field :dog, autofocus: true, placeholder: '複数OKです', autocomplete: 'dog', class: 'col-md-7' %>
        </div>
        <div class="form-group row">
          <%= f.label :introduction, '自己紹介文', class: 'col-md-3 offset-1' %>
          <%= f.text_area :introduction, autofocus: true, autocomplete: 'introduction', class: 'col-md-7' %>
        </div>
        <div class="form-group row">
          <%= f.label :dog_images, '犬の画像', class: 'col-md-3 offset-1' %>
          <%= f.file_field :dog_images, accept: 'image/*', multiple: true, class: 'col-md-7' %>
        </div>
        <div class="form-group row">
          <div class="col text-right">
            <%= f.submit "Sign up", class: 'btn btn-outline-info' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>