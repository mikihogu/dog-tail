<header class="sticky-top">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <% if request.path.match(/\/admin(\/)?/) %>
        <a class="navbar-brand" href="/admin"><%= image_tag 'with_logo-.png', size: '60x60' %></a>
      <% else %>
        <a class="navbar-brand" href="/"><%= image_tag 'with_logo-.png', size: '60x60' %></a>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

        <% if request.path.match(/\/admin(\/)?/) && admin_signed_in?%>
          <li>
            <%= link_to admin_posts_path, class:"a-header" do %>
              <div class="nav-link text-light a-header">施設一覧</div>
            <% end %>
          </li>
          <li>
            <%= link_to admin_members_path, class:"a-header" do %>
              <div class="nav-link text-light a-header">会員一覧</div>
            <% end %>
          </li>
          <li>
            <%= link_to admin_tags_path, class:"a-header" do %>
              <div class="nav-link text-light a-header">タグ一覧</div>
            <% end %>
          </li>
          <li>
            <%= link_to admin_categories_path, class:"a-header" do %>
              <div class="nav-link text-light a-header">カテゴリー一覧</div>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class:"a-header" do %>
              <div class="nav-link text-light a-header">ログアウト</div>
            <% end %>
        </li>

        <% elsif request.path.match(/\/admin(\/)?/) %>
          <li>
            <%= link_to new_admin_session_path, class:"a-header" do %>
              <div class="nav-link text-light a-header">ログイン</div>
            <% end %>
          </li>

        <% elsif member_signed_in? %>
          <li>
            <%= link_to about_path, class:"a-header" do %>
              <div class="nav-link text-light a-header"><i class="fas fa-dog"></i> About</div>
            <% end %>
          </li>
          <li>
            <%= link_to member_path(current_member), class:"a-header" do %>
              <div class="nav-link text-light a-header"><i class="fas fa-user"></i> マイページ</div>
            <% end %>
          </li>
          <li>
            <%= link_to posts_path, class:"a-header" do %>
              <div class="nav-link text-light a-header"><i class="fas fa-map-marked-alt"></i> 施設一覧</div>
            <% end %>
          </li>
          <li>
            <%= link_to post_interests_path(current_member), class:"a-header" do %>
              <div class="nav-link text-light a-header"><i class="fas fa-star"></i> 一覧</div>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_member_session_path, method: :delete, class:"a-header" do %>
              <div class="nav-link text-light a-header"><i class="fas fa-sign-out-alt"></i> ログアウト</div>
            <% end %>
          </li>

        <% else %>
          <li>
            <%= link_to about_path, class:"a-header" do %>
              <div class="nav-link text-light a-header"><i class="fas fa-dog"></i> About</div>
            <% end %>
          </li>
          <li>
            <%= link_to posts_path, class:"a-header" do %>
              <div class="nav-link text-light a-header"><i class="fas fa-map-marked-alt"></i> 施設一覧</div>
            <% end %>
          </li>
          <li>
            <%= link_to new_member_registration_path, class:"a-header" do %>
              <div class="nav-link text-light a-header"><i class="fas fa-user"></i> 新規登録</div>
            <% end %>
          </li>
          <li>
            <%= link_to new_member_session_path, class:"a-header" do %>
              <div class="nav-link text-light a-header"><i class="fas fa-sign-in-alt"></i> ログイン</div>
            <% end %>
          </li>
            <% end %>
        </ul>
      </div>
    </div>
    <div>
      <% if request.path.match(/\/admin(\/)?/) && admin_signed_in? %>
        <%= render 'layouts/admin_search' %>
      <% elsif member_signed_in? %>
        <%= render 'layouts/search' %>
      <% end %>
    </div>
  </nav>
</header>