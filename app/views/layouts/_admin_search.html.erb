<div class="search_form">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <div class="input-group">
      <% if admin_signed_in? %>
        <div class="admin-search d-flex align-items-stretch"><%= f.select :range, options_for_select([['施設'], ['会員']]), include_blank: '（検索対象）' %></div>
      <% end %>
      <%= f.text_field :word, class: "form-control search-control d-flex align-items-stretch", placeholder: " 施設名、所在地 ", autocomplete: "off", value: params[:word] %>
      <%= button_tag type: "submit", class: "btn btn-light search-btn" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>
