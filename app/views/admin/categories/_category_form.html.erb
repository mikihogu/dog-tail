<%= form_with model: category, method: :post, url: admin_categories_path, local: false, html: {class: 'p-5 shadow-lg'} do |f| %>
  <div class="form-group">
    <%= f.label :name, 'カテゴリー名', class: 'col-md-3' %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'off', class: 'col-md-5' %>
    <%= f.submit '追加', class: 'btn btn-sm btn-outline-info col-md-2 offset-1' %>
  </div>
<% end %>