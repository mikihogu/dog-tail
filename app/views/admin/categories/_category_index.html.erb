<div class="item-wrap row mb-5">
<% categories.each do |category| %>
  <div class="item shadow-sm col-md-4 p-3 my-3">
    <%= category.name %>
    <!--削除ボタン-->
    <%= link_to admin_category_path(category.id), method: :delete, remote: true, style: 'color: red;', 'data-confirm'=>'このカテゴリーを削除します' do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </div>
<% end %>
</div>