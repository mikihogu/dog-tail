<div class="container my-3">
  <div class="row">
    <div class="col-md-12">
      <h2 class="title m-3"><i class="fas fa-dog"></i> 会員一覧</h2>
    </div>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>会員氏名</th>
        <th>ニックネーム</th>
        <th>メールアドレス</th>
        <th colspan="2">投稿数</th>
        <th><i class="fas fa-thumbs-up" style= "color:gray;"></i> 数</th>
        <th><i class="fas fa-star" style= "color:gray;"></i> 数</th>
        <th><i class="fas fa-comment-dots" style= "color:gray;"></i> 数</th>
        <th>登録日</th>
        <th>状況</th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.name %></td>
          <td>
            <%= link_to admin_member_path(member), class: 'link' do %>
              <%= member.nickname %>
            <% end %>
          </td>
          <td><%= member.email %></td>
          <td><%= member.posts.count %></td>
          <td><%= link_to "投稿一覧", admin_posts_path(member_id: member.id), class: 'btn btn-sm btn-outline-secondary rounded-pill' %></td>
          <td><%= member.favorites.count %></td>
          <td><%= member.interests.count %></td>
          <td><%= member.comments.count %></td>
          <td><%= l member.created_at %></td>
          <td>
            <% if member.is_deleted == false %>
              <p>会員</p>
            <% else %>
              <p>退会</p>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row justify-content-center mt-3">
    <%= paginate @members %>
  </div>
</div>