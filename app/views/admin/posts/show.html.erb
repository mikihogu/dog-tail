<div class="container my-3">
  <div class="row">
    <div class="col-md-9">
      <h2 class="title m-3"><i class="fas fa-dog"></i> 施設詳細</h2>
    </div>
    <!--削除ボタン-->
    <div>
      <%= link_to admin_post_path(@post), method: :delete, 'data-confirm'=>'管理者がこの投稿を削除します', class: 'link col-md-1' do %>
        <i class="fas fa-trash-alt"></i>（この投稿を完全に削除する）
      <% end %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-4 my-3">
      <div class="row">
        <div class="col-md-12">
          <h5>名称：<b><%= @post.name %></b></h5>
        </div>
      </div>
      <div>
        <%= image_tag @post.get_post_image, height: 200, class: 'image-fluid img-thumbnail' %>
      </div>
      <div class="row m-3">
        <i class="fas fa-star"></i> おすすめ <%= @post.favorites.count %>
      </div>
      <div class="row m-3">
        <i class="fas fa-paw"></i> ブックマーク <%= @post.interests.count %>
      </div>

      <!--Map表示-->
      <div class="row m-1">
        <div class="col-md-12 p-0">
          <%= render 'public/posts/map_show', post: @post %>
        </div>
      </div>
    </div>

    <div class="col-md-7 offset-0 offset-md-1">
      <!--投稿施設詳細-->
      <%= render 'public/posts/place_info', post: @post %>

      <!--コメント-->
      <div class="comment p-3 my-3">
        <%= render 'public/comments/comment', post: @post, comment: @comment, comments: @comments %>
      </div>

    </div>
  </div>
  <div class="row"></div>
</div>