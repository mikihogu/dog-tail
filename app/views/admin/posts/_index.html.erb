<table class="table table-hover">
  <thead>
    <tr>
      <th>投稿者</th>
      <th>施設名称</th>
      <th>所在地</th>
      <th>カテゴリー</th>
      <th>一言紹介文</th>
      <th></th>
      <th>更新日</th>
      <th>投稿日</th>
    </tr>
  </thead>
  <tbody>
    <% if posts.empty? %>
      <h4 class="m-3">該当する投稿が見つかりません</h4>
    <% else %>
      <% posts.each do |post| %>
        <tr>
          <td>
            <%= link_to admin_member_path(post.member), class: 'link' do %>
              <%= post.member.nickname %>
            <% end %>
          </td>
          <td>
            <%= link_to admin_post_path(post), class: 'link' do %>
              <%= post.name.truncate(14) %>
            <% end %>
          </td>
          <td><%= post.prefecture %></td>
          <td><%= post.category.name %></td>
          <td><%= post.introduction.truncate(14) %></td>
          <td>
            <span class="mx-1"><i class="fas fa-star"></i> <%= post.favorites.count %></span>
            <span class="mx-1"><i class="fas fa-paw"></i> <%= post.interests.count %></span>
            <span class="mx-1"><i class="far fa-comment-dots"></i> <%= post.comments.count %></span>
          </td>
          <td><%= l post.updated_at %></td>
          <td><%= l post.created_at %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>