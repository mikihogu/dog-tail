<div class="container my-3">
  <div class="row">
    <div class="col-md-12">
      <h2 class="title m-3"><i class="fas fa-dog"></i> 投稿一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to '最新順(更新日)', admin_posts_path(latest: "true"), class: 'btn btn-sm btn-outline-secondary rounded-pill' %>
      <%= link_to '古い順(投稿日)', admin_posts_path(old: "true"), class: 'btn btn-sm btn-outline-secondary rounded-pill' %>
      <%= link_to admin_posts_path(most_favorited: "true"), class: 'btn btn-sm btn-outline-secondary rounded-pill' do %>
        <i class="fas fa-star"></i>おすすめ順
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>投稿者</th>
            <th>施設名称</th>
            <th>所在地</th>
            <th>カテゴリー</th>
            <th>一言紹介文</th>
            <th></th>
            <th>更新日</th>
            <th>投稿日</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to admin_member_path(post.member), class: 'link' do %>
                  <%= post.member.nickname %>
                <% end %>
              </td>
              <td>
                <%= link_to admin_post_path(post), class: 'link' do %>
                  <%= post.name %>
                <% end %>
              </td>
              <td><%= post.prefecture %></td>
              <td><%= post.category.name %></td>
              <td><%= post.introduction.truncate(15) %></td>
              <td>
                <span class="mx-1"><i class="fas fa-star"></i> <%= post.favorites.count %></span>
                <span class="mx-1"><i class="fas fa-paw"></i> <%= post.interests.count %></span>
                <span class="mx-1"><i class="far fa-comment-dots"></i> <%= post.comments.count %></span>
              </td>
              <td><%= l post.updated_at %></td>
              <td><%= l post.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-center my-2">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
  <div class="mt-3">
    <%= render 'public/posts/map_index', posts: @posts %>
  </div>
</div>