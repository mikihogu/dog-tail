<% if admin_signed_in? %>
# 管理者側の検索欄
  <% if @range == "Post" %>
    <div class="container my-5">
      <div class="row">
        <div class="col-10">
          <h3><span class="bg-light bg-gradient">検索結果/投稿施設一覧</span></h3>
        </div>
        <div class="col-2 ml-auto">
          <%= link_to "+", new_admin_post_path, class: "btn btn-lg rounded-pill shadow-sm" %>
        </div>
        <div>
          <%= render 'public/posts/index', post: @posts %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="container my-5">
      <div class="row">
        <h4 class="mb-3 ml-5">検索結果/会員一覧</h4>
      </div>



    </div>
  <% end %>
<% elsif member_signed_in? %>
<!--会員側の検索結果-->
  <div class="container my-3">
    <div class="row">
      <div class="col-md-8">
        <h2 class="m-3 border-bottom"><i class="fas fa-dog"></i> 検索結果<small>(全<%= @posts.length %>件)</small></h2>
      </div>
    </div>
    <!--tab表示-->
    <div class="wrap">
      <ul id="tab-menu">
        <li><%= link_to '全て', search_path(word: @word), class: 'active' %></li>
        <!--タブに表示されたカテゴリー名に紐づく投稿を一覧表示-->
        <% @categories.each do |category| %>
          <li><%= link_to category.name, search_path(category: category.name, word: @word), class: ('active' if category == @category) %></li>
        <% end %>
      </ul>
    </div>
    <%= link_to '最新順(更新日)', search_path(condition: :latest, category: @category&.name, word: @word) %>
    <%= link_to '古い順(投稿日)', search_path(condition: :old, category: @category&.name, word: @word) %>
    <%= link_to 'おすすめ順', search_path(condition: :most_favorited, category: @category&.name, word: @word) %>
    <% if @posts.empty? %>
      <div class="row">
        <div class="col mt-5 text-center">
          <h4>該当する施設が見つかりません</h4>
        </div>
      </div>
    <% else %>
      <div class="wrap">
        <!--一覧-->
        <%= render 'public/posts/index', posts: @posts %>
      </div>
    <% end %>
  </div>
<% end %>
